<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#FF000000"
        android:textColor="#FFFFFFFF"
        android:text="" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FF003333"
        android:textColor="#FFFFFFFF"
        android:gravity="center_horizontal"
        android:text="@string/app_title_stg" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FF000000"
        android:textColor="#FFFFFFFF"
        android:text="" />
    
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" 
    	android:orientation="horizontal"
       	android:background="#FF004444"
        >

	    <LinearLayout
	        android:id="@+id/linearLayout"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content" 
	    	android:orientation="vertical"
       		android:background="#FF004444"
	        >
	
	        <Button
	            android:id="@+id/button"
	            android:layout_width="200dip"
	            android:layout_height="wrap_content"
           		android:onClick="selectClient"
           		android:tag="adams1234"
	            android:text="Adams, John" />
	        <Button
	            android:id="@+id/button2"
	            android:layout_width="200dip"
	            android:layout_height="wrap_content"
           		android:onClick="selectClient"
           		android:tag="burton2234"
	            android:text="Burton, Richard" />
	
	        <Button
	            android:id="@+id/button3"
	            android:layout_width="200dip"
	            android:layout_height="wrap_content"
           		android:onClick="selectClient"
           		android:tag="chandler3234"
	            android:text="Chandler, Wm" />
	
	        <Button
	            android:id="@+id/button4"
	            android:layout_width="200dip"
	            android:layout_height="wrap_content"
           		android:onClick="selectClient"
           		android:tag="downs4234"
	            android:text="Downs, Andrea" />
	        
	        <Button
	            android:id="@+id/button6"
	            android:layout_width="200dip"
	            android:layout_height="wrap_content"
           		android:onClick="selectClient"
           		android:tag="evans9234"
	            android:text="Evans, George" />
	
	        <Button
	            android:id="@+id/button7"
	            android:layout_width="200dip"
	            android:layout_height="wrap_content"
           		android:onClick="selectClient"
           		android:tag="freud5234"
	            android:text="Freud, Simone" />
	
	        <Button
	            android:id="@+id/button8"
	            android:layout_width="200dip"
	            android:layout_height="wrap_content"
           		android:onClick="selectClient"
           		android:tag="grasse6234"
	            android:text="Grasse, Neil" />
	
	        <Button
	            android:id="@+id/button5"
	            android:layout_width="200dip"
	            android:layout_height="wrap_content"
           		android:onClick="selectClient"
           		android:tag="higgins7234"
	            android:text="Higgins, Henry" />
	
	    </LinearLayout>
	</LinearLayout>
	   
	<LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
    	android:orientation="horizontal"
        android:background="#FF003B44"
        >
	    <LinearLayout
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentLeft="true"
	    	android:orientation="horizontal"
	        android:background="#FF003B44"
	        >
        	<Button
	            android:id="@+id/button_new_client"
		          android:layout_width="212dip"
	            android:layout_height="wrap_content"
	            android:onClick="addNewClient"
	            android:text="Add New Client" 
	            />
        	</LinearLayout>
        <TextView
	        android:id="@+id/tv_title1"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:textColor="#CCCC00"
	        android:gravity="center"
	        android:text="There are 8 properties currently available." 
	        />
    </LinearLayout>
            
