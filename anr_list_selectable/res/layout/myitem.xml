<?xml version="1.0" encoding="utf-8"?>
<com.maranr.anr_list_selectable.widget.CheckableRelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:maranr="http://schemas.android.com/apk/res/com.maranr.anr_list_selectable"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:layout_marginRight="10dp"
	android:paddingTop="5dp"
	android:paddingBottom="5dp">

	<TextView android:id="@+id/itemId" 
		android:layout_width="50dp"
		android:layout_height="fill_parent" 
		android:layout_alignParentLeft="true" 
		android:layout_centerVertical="true" 
		android:layout_marginLeft="5dp"
		android:textSize="18dp" 
		android:textStyle="bold|italic"
		android:textColor="#fccc" 
		android:focusable="false" />

	<TextView android:id="@+id/itemCaption"
		android:layout_width="wrap_content" 
		android:layout_height="fill_parent"
		android:layout_toRightOf="@id/itemId" 
		android:layout_centerVertical="true" 
		android:textSize="13dp"
		android:textColor="#feee" 
		android:focusable="false" />	

	<com.maranr.widget.InertCheckBox android:id="@+id/itemCheckBox"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_marginRight="5dp"
		android:layout_alignParentRight="true" 
		android:layout_centerVertical="true" 
		android:focusable="false" 
		android:button="@drawable/checkbox" />
		<!--  focusable is false to allow focus events to propagate to
			  the parent, which is the CheckableRelativeLayout, a 
			  custom RelativeLayout.
			  The custom layout implements Checkable while a 'plain'
			  RelativeLayout does not.
			  -->
			
</com.maranr.anr_list_selectable.widget.CheckableRelativeLayout>
<!--  end  -->